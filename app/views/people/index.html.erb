<h1>Listing people</h1>

<table>
  <tr>
    <th>First</th>
    <th>Last</th>
    <th>Present</th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%=link_to(h(person.first) + " " + h(person.last), edit_person_path(person)) %></td>
    <td><%=h person.present %></td>
    <td><%= link_to 'Destroy', person, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

